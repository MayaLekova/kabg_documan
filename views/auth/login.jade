extends ../layout.jade

block content
  if errors
    ul
      each error in errors
        li= __(error)

  div
    div.vertical-center
      form(role="form", action="/auth/local", method="post", style="text-align: center").center-block
        div.form-group
          input(type="text", name="identifier", placeholder="Username or Email").form-control
          input(type="password", name="password", placeholder="Password").form-control
        button(type="submit").btn.btn-primary Sign in
        |  
        a(href="/register").btn.btn-default or register

