extends ./layout.jade

block content
  h1 Добавяне на нова поръчка

  div.form-group
    form(action="/document/upload?type=order&signedByAdmin=1",enctype="multipart/form-data",method="post")
      label(for="sel-user") Избери изпълнител:
      select.form-control#sel-user(name="username")
        each user in users
          option= user.fullname + ' (' + user.username + ')'
      input(type="file", name="document", multiple="multiple")
      input(type="submit", value="Качи поръчка")
